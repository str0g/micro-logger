{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build using system compiler",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "hidden": true
    },
    {
      "name": "debug",
      "description": "Build project in debug mode",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "WITH_MICRO_LOGGER_DEMOS": "On",
        "WITH_MICRO_LOGGER_TESTS": "On",
        "WITH_SANITIZER": "On"
      }
    },
    {
      "name": "release",
      "description": "Build project in release mode",
      "inherits": "default"
    }
  ]
}
